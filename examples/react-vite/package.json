{
  "name": "polingo-react-example",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm compile && vite build",
    "preview": "vite preview",
    "extract": "polingo extract src -o locales/messages.pot",
    "compile": "polingo compile locales/en -o public/i18n/en --format json && polingo compile locales/es -o public/i18n/es --format json && polingo compile locales/fr -o public/i18n/fr --format json",
    "validate": "polingo validate locales"
  },
  "dependencies": {
    "@polingo/core": "workspace:*",
    "@polingo/react": "workspace:*",
    "@polingo/web": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@polingo/cli": "workspace:*",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.9.3",
    "vite": "^6.0.11"
  }
}

{
  "name": "polingo",
  "version": "0.0.4",
  "type": "module",
  "description": "Modern i18n library using .po/.mo files",
  "homepage": "https://github.com/ragnarok22/polingo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ragnarok22/polingo.git"
  },
  "bugs": {
    "url": "https://github.com/ragnarok22/polingo/issues"
  },
  "bin": {
    "polingo": "./packages/cli/dist/cli.js"
  },
  "files": [
    "packages/cli/dist"
  ],
  "scripts": {
    "build": "pnpm turbo run build",
    "dev": "pnpm turbo run dev",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "pnpm turbo run test",
    "test:coverage": "pnpm turbo run test:coverage",
    "test:watch": "vitest",
    "lint": "pnpm turbo run lint",
    "lint:fix": "eslint \"packages/*/{src,test}/**/*.ts\" --fix --no-error-on-unmatched-pattern",
    "format": "prettier --write \"packages/**/*.{ts,json,md}\" \"docs/**/*.md\"",
    "format:check": "prettier --check \"packages/**/*.{ts,json,md}\" \"docs/**/*.md\"",
    "typecheck": "pnpm turbo run typecheck",
    "security": "pnpm audit --prod --audit-level=moderate && pnpm exec lockfile-lint --type pnpm --path pnpm-lock.yaml --validate-https",
    "clean": "pnpm -r exec rm -rf dist node_modules .turbo",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.9",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "lockfile-lint": "^4.14.1",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitepress": "2.0.0-alpha.12",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

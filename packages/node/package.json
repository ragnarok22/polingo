{
  "name": "@polingo/node",
  "version": "0.0.2",
  "description": "Node.js loader for Polingo translation system",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --reporter=default --reporter=junit --outputFile=test-report.junit.xml",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --reporter=default --reporter=junit --outputFile=test-report.junit.xml",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@polingo/core": "workspace:*",
    "chokidar": "^4.0.3",
    "gettext-parser": "^8.0.0"
  },
  "devDependencies": {
    "@types/gettext-parser": "^8.0.0",
    "@types/node": "^24.7.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "polingo",
    "i18n",
    "internationalization",
    "gettext",
    "translation",
    "nodejs"
  ],
  "author": "Reinier Hern√°ndez Avila",
  "license": "MIT",
  "homepage": "https://github.com/ragnarok22/polingo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ragnarok22/polingo.git",
    "directory": "packages/node"
  },
  "bugs": {
    "url": "https://github.com/ragnarok22/polingo/issues"
  }
}

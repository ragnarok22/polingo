{
  "name": "@polingo/cli",
  "version": "0.0.2",
  "description": "Command line tooling for the Polingo translation workflow",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "polingo": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "pretest": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "polingo",
    "i18n",
    "internationalization",
    "gettext",
    "translation",
    "cli",
    "po",
    "mo"
  ],
  "author": "Reinier Hern√°ndez Avila",
  "license": "MIT",
  "homepage": "https://github.com/ragnarok22/polingo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ragnarok22/polingo.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/ragnarok22/polingo/issues"
  },
  "dependencies": {
    "fastest-levenshtein": "^1.0.16",
    "gettext-parser": "^8.0.0"
  },
  "devDependencies": {
    "@types/gettext-parser": "^8.0.0",
    "@types/node": "^24.7.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}

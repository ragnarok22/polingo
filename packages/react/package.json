{
  "name": "@polingo/react",
  "version": "0.0.1",
  "description": "React bindings for the Polingo translation engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "polingo",
    "i18n",
    "internationalization",
    "gettext",
    "react",
    "translations"
  ],
  "author": "Reinier Hern√°ndez Avila",
  "license": "MIT",
  "homepage": "https://github.com/ragnarok22/polingo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ragnarok22/polingo.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/ragnarok22/polingo/issues"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@polingo/core": "workspace:*",
    "@polingo/web": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.0",
    "jsdom": "^24.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
